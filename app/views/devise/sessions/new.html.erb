<div class="wrapper_with_padding">
  <h2>Войти</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, :label => "Email"%>
      <%= f.input :password, required: false, :label => "Пароль" %>
      <%= f.input :remember_me, as: :boolean, :label => "Запомнить меня" if devise_mapping.rememberable? %>
    </div>
    
    <div class="form-actions">
      <p></p>
      <%= f.button :submit, "Войти" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
